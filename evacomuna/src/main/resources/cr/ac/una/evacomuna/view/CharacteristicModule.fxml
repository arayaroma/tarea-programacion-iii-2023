<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.evacomuna.controller.CharacteristicModuleController">
   <children>
      <HBox fx:id="mainCharacteristicsView" styleClass="bg-white">
         <children>
            <VBox spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnNewCharactersitic" text="New">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="confirm-color" />
                     </styleClass>
                  </Button>
                  <TextField fx:id="txfCharacteristic" promptText="Characteristic Name" />
                  <ListView fx:id="listCharactersiticView" prefHeight="200.0" prefWidth="200.0" />
                  <HBox spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#btnEditCharacteristic" styleClass="btn" text="Edit" />
                        <Button mnemonicParsing="false" onAction="#btnDeleteCharacteristic" text="Delete">
                           <styleClass>
                              <String fx:value="error-color" />
                              <String fx:value="btn" />
                           </styleClass>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </VBox>
         </children>
         <stylesheets>
            <URL value="@../style/index.css" />
            <URL value="@../style/roleModule.css" />
         </stylesheets>
      </HBox>
   </children>
</StackPane>
