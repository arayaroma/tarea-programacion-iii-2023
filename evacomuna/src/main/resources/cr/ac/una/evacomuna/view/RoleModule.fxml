<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox stylesheets="@../style/index.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="20.0" HBox.hgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" text="New">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="confirm-color" />
               </styleClass>
            </Button>
            <ComboBox editable="true" prefWidth="150.0" promptText="Roles" />
            <Label styleClass="h1" text="Skills" />
            <ListView prefHeight="200.0" prefWidth="200.0" />
            <HBox spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" styleClass="btn" text="Edit" />
                  <Button mnemonicParsing="false" text="Delete">
                     <styleClass>
                        <String fx:value="error-color" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
